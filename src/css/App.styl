@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,700');
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');

@import 'Carousel.styl';

:root {
    --base-colour-red: #F30A2E;
    --base-colour-green: #508EA5;
    --base-colour-yellow: #F3DB04;
    --base-colour-orange: #F2A103;
    --base-colour-grey: #232E2F;
     --body-font: 'Montserrat', sans-serif;
     --body-font-size: 2rem; /* font-size 1em = 10px on default browser settings target / 10 = result */
     --body-font-line-height: 3rem;
     --body-font-letter-spacing: 0.1rem;
     --body-font-heading: 'Lato', sans-serif;
     --body-font-heading-size: 4rem; /* font-size 1em = 10px on default browser settings target / 10 = result */
     --body-font-heading-line-height: 3.5rem;
     --body-font-heading-letter-spacing: 0.1rem;
     --body-font-heading2-size: 3rem;
     --body-page-width: 1300px;
     --page-bg: #F7F7F7;
     --header-nav-bg: #232E2F;
     --font-body-colour: #111111;
     --font-header-nav-colour: #FFFFFF;
     --font-header-nav-colour-hover: #F3DB04;
     --font-network-box-colour: #FFFFFF;
     --network-box-bg-social: #232E2F;
     --network-box-bg-developer: #508EA5;
     --network-box-border-colour-social: #508EA5;
     --network-box-border-colour-developer: #F2A103;
     --copyrights-bg: #ffffff;
     --hero-container-bg: #508EA5;
     --hero-container-h1: #ffffff;
}
 html {
     font-size: 62.5%;
    /* font-size 1em = 10px on default browser settings target / 10 = result */
}
 body {
     font-family: var(--body-font);
     font-size: var(--body-font-size);
     line-height: var(--body-font-line-height);
     letter-spacing: var(--body-font-letter-spacing);
     background: var(--page-bg);
     color: var(--font-body-colour);
}
h1 {
     font-family: var(--body-font-heading);
     font-size: var(--body-font-heading-size);
     line-height: var(--body-font-heading-line-height);
     letter-spacing: var(--body-font-heading-letter-spacing);
     color: var(--font-body-color-heading);
}
h2 {
     font-family: var(--body-font-heading);
     font-size: var(--body-font-heading2-size);
     line-height: var(--body-font-heading-line-height);
     letter-spacing: var(--body-font-heading-letter-spacing);
     color: var(--font-body-color-heading);
}
 .container {
     margin: 0 auto;
     display: grid;
     justify-items: center;
     max-width: var(--body-page-width);
     width: 100%;
}
/* Header Page */
/* Button Default Colour State */
.default-state {
    color: var(--font-header-nav-colour-hover) !important;
    fill: var(--font-header-nav-colour-hover) !important;
}

 /* Sticky Header Code */
 .container-sticky-header {
     margin-bottom: 100px;
     position: relative;
     z-index: 1;
}

 .container-header {
     margin: 0 auto;
     display: grid;
     justify-items: center;
     max-width: 100%;
     width: 100%;
}

 .header-nav {
     grid-template-columns: 1fr 1fr 1fr 1fr;
     padding-top: 10px;
     justify-items: center;
     background: var(--header-nav-bg);
     -webkit-box-shadow: 0px 4px 4px -2px rgba(69,69,69,0.69);
    -moz-box-shadow: 0px 4px 4px -2px rgba(69,69,69,0.69);
    box-shadow: 0px 4px 4px -2px rgba(69,69,69,0.69);


     /* Sticky Header Code */
     position: fixed;
     right: 0;
     left: 0;
     top: 0;
     z-index: 20;
}
 .header-nav h1 {
     font-size: 1.2rem;
     font-family: 'Exo 2', sans-serif;
     color: var(--font-header-nav-colour);
     text-transform: uppercase;
     margin: 0;
     padding: 0;
}
 .home-svg, .about-svg, .portfolio-svg, .contact-svg {
     text-align: center;
     display: grid;
     justify-items: center;
     grid-template-columns: 1fr;
}
 .home-svg svg, .about-svg svg {
     fill: var(--font-header-nav-colour);
     height: 30px;
     width: 30px;
}
 .portfolio-svg svg {
     fill: var(--font-header-nav-colour);
     height: 30px;
     width: 37px;
}
 .contact-svg svg {
     fill: var(--font-header-nav-colour);
     height: 30px;
     width: 39px;
}
 a {
     text-decoration: none;
}

.home-svg h1, 
.about-svg h1, 
.portfolio-svg h1, 
.contact-svg h1 {
    font-size: 0.8rem;
}

.nav-buttons {
    height: 70px;
    width: 92px;
    background: none;
    border: none;
    cursor: pointer;
}

