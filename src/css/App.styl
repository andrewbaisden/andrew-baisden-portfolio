.portfolio-home-container {
    margin: 60px auto;
    max-width: var(--body-page-width);
    width: 100%;
    display: grid;
    justify-items: center;
    justify-content: space-evenly;
    grid-gap: 50px;
    grid-template-columns: repeat(auto-fill, minmax(300px, 3fr));
    position: relative;
}

.portfolio-company-container {
    position: relative;
}

.portfolio-company {
    display: grid;
    justify-items: center;
    width: 300px;
    height: 270px;
    background: #ffffff;
    box-shadow: 0px 0px 10px 1px rgba(226,226,226,1);
}

.portfolio-company-animation {
    display: grid;
    opacity: 0;
    justify-item: center;
    align-items: center;
    text-transform: uppercase;
    background: var(--base-colour-red);
    width: 300px;
    height: 301px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    text-align: center;
    color: #ffffff;
    font-weight: bold;
    transition: opacity 0.1s;
}

.portfolio-company-animation:hover {
    opacity: 0.8;
    animation-name: animateStory;
    animation-duration: 0.1s;
    animation-fill-mode: forwards;
}

@keyframes animateStory {
    0%   {left:10px; top:0px;}
    100% {left:0px; top:0px;}
}

