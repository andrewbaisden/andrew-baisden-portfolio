}

/* Portfolio Company Pages */

.portfolio-company-page-container {
    margin: 20px auto;
    width: 100%;
    max-width 1300px;
    display: grid;
    justify-items: center;
}

.portfolio-company-skills {
    display: grid;
    grid-gap: 20px;
    grid-template-columns: 1fr 1fr;
}

.portfolio-company-logo {
    width: 374px;
    height: 374px;
    background: #ffffff;
    display: grid;
    justify-items: center;
    align-content: center;
    box-shadow: 0px 0px 10px 1px rgba(230,230,230,1);
}

.portfolio-skill-usage {
    background: #ffffff;
    max-width: 480px;
    width: 100%;
    height: auto;
    display: grid;
    padding: 20px;
    justify-items: center;
    box-shadow: 0px 0px 10px 1px rgba(240,240,240,1);
}

.portfolio-company-copy {
    margin-top: 20px;
    display: grid;
    grid-templat-columns: 1fr;
    padding: 20px;
    background: #ffffff;
}

/* Contact Page */

.contact-form-container {
    margin: 20px auto;
    width: 100%;
    max-width: 1300px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
}

.contact-form {
    background: #ffffff;
    box-shadow: 0px 0px 10px 1px rgba(240,240,240,1);
    padding: 20px;
}
.contact-form-copy {
    padding: 0px 20px 0px 20px;
}

/* NoMatch 404 Page */

.no-match-404-container { 
  display: grid;
  margin: 0 auto;
  width: 100%;
  max-width: var(--body-page-width);
  background: #000000;
  
}

.no-match-404 {
  display: grid;
  padding: 20px;
  justify-items: center;
  text-align: center;
  color: #ffffff;
  }

  .no-match-404 h1:nth-child(4) {
    font-family: var(--body-font-heading);
    font-size: var(--body-font-heading-size);
    font-weight: 300;
    text-transform: uppercase;
    color: #D0E3F4;
    }

  .no-match-404 img {
    width: 100%;
    }

